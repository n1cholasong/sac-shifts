<div class="availabilities container card glass p-4 my-3 mb-5">
    <div class="d-flex justify-content-between align-items-center row">
        <h1 class="m-0 col-6">{{title}} (Calendar)</h1>
        <form method="GET" class="col h-100 me-1 d-flex flex-row justify-content-end">
            <div class="d-flex align-items-center ">
                <select id="month" name="month" class="form-select me-3">
                    <option selected disabled>Select Month</option>
                    {{#each month}}
                    <option value="{{@index}}">{{this}}</option>
                    {{/each}}
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Get Record</button>
        </form>
    </div>
</div>
{{#if selectedMonth includeZero=true}}
<div class="availabilities container-fluid">
    <table class="table table-sm text-center table-bordered">
        <thead>
            <tr class="table-secondary">
                <th>Sun</th>
                <th>Mon</th>
                <th>Tue</th>
                <th>Wed</th>
                <th>Thu</th>
                <th>Fri</th>
                <th>Sat</th>
            </tr>
        </thead>
        <tbody>
            {{#each weeks}}
            <tr class="table-light">
                {{#each this}}
                {{#ifEquals this.dateString ''}}
                <th></th>
                {{else}}
                <th>{{formatDate this.dateString 'D MMM'}}</th>
                {{/ifEquals}}
                {{/each}}
            </tr>
            <tr>
                {{#each this}}
                <td class="py-3">
                    {{#if (isWeekend this.dateString)}}
                    <div>
                    </div>
                    {{else}}
                    <div>
                        {{#if this.sortedShift1}}
                        <div class="mb-3">
                            <h6>
                                Shfit 1 (<span
                                    class="{{shiftIndex this.sortedShift1.length}}">{{this.sortedShift1.length}}</span>)
                            </h6>
                            <div class="SAC">
                                <ol>
                                    {{#each this.sortedShift1}}
                                    <li>{{this.fields.FullName}}</li>
                                    {{/each}}
                                </ol>
                            </div>
                        </div>
                        {{/if}}
                        {{#if this.sortedShift2}}
                        <div>
                            <h6>
                                Shfit 2 (<span
                                    class="{{shiftIndex this.sortedShift2.length}}">{{this.sortedShift2.length}}</span>)
                            </h6>
                            <div class="SAC">
                                <ol>
                                    {{#each this.sortedShift2}}
                                    {{#ifEquals this.sortedShift2 ''}}
                                    <div>
                                        <h6 class="text-danger">No SAC Available!</h6>
                                    </div>
                                    {{else}}
                                    <li>{{this.fields.FullName}}</li>
                                    {{/ifEquals}}
                                    {{/each}}
                                </ol>
                            </div>
                        </div>
                        {{/if}}
                    </div>
                    {{/if}}
                </td>
                {{/each}}
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
{{else}}
<div>
    <h3 class="text-danger text-center">Please select a month</h3>
</div>
{{/if}}