<form action="/submitAvailability/add" method="POST" id="availabilityForm" class="h-100 d-flex flex-column">
    <div class="container card glass p-4 my-3">
        <div class="d-flex justify-content-between align-items-center row mb-3">
            <h1 class="m-0 col-10">{{title}}</h1>
            <div class="dropdown col">
                <button class="btn btn-warning dropdown-toggle w-100" type="button" data-bs-toggle="dropdown"
                    aria-expanded="false">
                    Select Month
                </button>
                <ul class="dropdown-menu" data-target="availability-dropdown">
                    {{#each month}}
                    <li><a class="dropdown-item" href="/submitAvailability?month={{@index}}">{{this}}</a></li>
                    {{/each}}
                </ul>
            </div>
        </div>
        <div class="row">
            <div class="col-10 pe-0">
                <select id="SAC" name="SAC" class="form-select">
                    <option selected disabled>Select SAC</option>
                    {{#each SAC}}
                    <option value="{{this.Id}}">{{this.SAC}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="col">
                <button type="submit" id="submitBtn" class="w-100 btn btn-primary">Submit</button>
            </div>
            <input type="hidden" name="selectedSAC" id="selected-sac-input" />
            <div id="spinner" class="mt-1" style="display: none;">
                <i class="fa fa-spinner fa-spin"></i> Submitting...
            </div>
        </div>
    </div>
    <div class="container">
        {{#if error}}
        <div class="alert alert-danger">{{error}}</div>
        {{/if}}
        {{#if success}}
        <div class="alert alert-success">{{success}}</div>
        {{/if}}
    </div>

    {{#if selectedMonth includeZero=true}}
    <div class="submit container">
        <table id="calendar" class="table table-sm text-center table-bordered my-3">
            <thead>
                <tr class="table-secondary table-top">
                    <th>Sun</th>
                    <th>Mon</th>
                    <th>Tue</th>
                    <th>Wed</th>
                    <th>Thu</th>
                    <th>Fri</th>
                    <th>Sat</th>
                </tr>
            </thead>
            <tbody>
                <div>
                    {{#each weeks}}
                    <tr class="table-light">
                        {{#each this}}
                        {{#ifEquals this ''}}
                        <th></th>
                        {{else}}
                        <th>{{formatDate this 'D MMM'}}</th>
                        {{/ifEquals}}
                        {{/each}}
                    </tr>
                    <tr>
                        {{#each this}}
                        {{#ifEquals this ''}}
                        <td></td>
                        {{else}}
                        <td>
                            {{#if (isWeekend this)}}
                            <div></div>
                            {{else}}
                            <div class="d-flex flex-column">
                                <label for="S1-{{formatDate this 'YYYY-MM-DD'}}" class="checkbox-item p-2">
                                    <input type="checkbox" name="shifts" id="S1-{{formatDate this 'YYYY-MM-DD'}}"
                                        value="S1-{{formatDate this 'YYYY-MM-DD'}}">
                                    <span class="checkbox-label">Shift 1</span>
                                </label>
                                <label for="S2-{{formatDate this 'YYYY-MM-DD'}}" class="checkbox-item px-2 pb-2">
                                    <input type="checkbox" name="shifts" id="S2-{{formatDate this 'YYYY-MM-DD'}}"
                                        value="S2-{{formatDate this 'YYYY-MM-DD'}}">
                                    <span class="checkbox-label">Shift 2</span>
                                </label>
                            </div>
                            {{/if}}
                            </th>
                            {{/ifEquals}}
                            {{/each}}
                    </tr>
                    {{/each}}
                </div>
            </tbody>
        </table>
    </div>
    {{else}}
    <div class="empty container">
        <h3 class="text-danger text-center mt-4">Please select a month</h3>
    </div>
    {{/if}}
</form>


<div id="background" class="loading-wall">
    <div class="loading-card text-center rounded-3 border border-dark">
        <div class="loading-body">
            <div class="circle-loader"></div>
        </div>
        <div class="d-flex justify-content-center mt-2">
            <h6>Loading</h6>
            <div class="spinner ms-1">
                <div class="bounce1"></div>
                <div class="bounce2"></div>
                <div class="bounce3"></div>
            </div>
        </div>
    </div>
</div>