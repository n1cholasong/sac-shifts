<div class="submit container mb-5">
    <form action="/submitAvailability/add" method="POST" id="availabilityForm">
        <div class="d-flex justify-content-between align-items-center mb-5">

            <h1 class="m-0">{{title}}</h1>
            <div class="row h-100">
                <div class="col">
                    <select id="SAC" name="SAC" class="form-select">
                        <option selected disabled>Select SAC</option>
                        {{#each SAC}}
                        <option value="{{this.Id}}">{{this.Name}}</option>
                        {{/each}}
                    </select>
                    <input type="hidden" name="selectedSAC" id="selected-sac-input" />
                </div>
                <button type="submit" id="submitBtn" class="btn btn-primary col">Submit</button>
                <div id="loadingSpinner" style="display: none;">
                    <i class="fa fa-spinner fa-spin"></i> Submitting...
                </div>
            </div>
            <div class="dropdown">
                <button class="btn btn-warning dropdown-toggle" type="button" data-bs-toggle="dropdown"
                    aria-expanded="false">
                    Select Month
                </button>
                <ul class="dropdown-menu">
                    {{#each month}}
                    <li><a class="dropdown-item" href="/submitAvailability?month={{@index}}">{{this}}</a></li>
                    {{/each}}
                </ul>
            </div>
        </div>
        <div>
            {{#if error}}
            <div class="alert alert-danger">{{error}}</div>
            {{/if}}
            {{#if success}}
            <div class="alert alert-success">{{success}}</div>
            {{/if}}
        </div>

        {{#if selectedMonth includeZero=true}}
        <table class="table table-sm text-center table-bordered">
            <thead>
                <tr class="table-secondary">
                    <th>Sun</th>
                    <th>Mon</th>
                    <th>Tue</th>
                    <th>Wed</th>
                    <th>Thu</th>
                    <th>Fri</th>
                    <th>Sat</th>
                </tr>
            </thead>
            <tbody>
                <form action="">
                    {{#each weeks}}
                    <tr class="table-light">
                        {{#each this}}
                        {{#ifEquals this ''}}
                        <th></th>
                        {{else}}
                        <th>{{formatDate this 'D MMM'}}</th>
                        {{/ifEquals}}
                        {{/each}}
                    </tr>
                    <tr>
                        {{#each this}}
                        {{#ifEquals this ''}}
                        <td></td>
                        {{else}}
                        <td>
                            {{#if (isWeekend this)}}
                            <div></div>
                            {{else}}
                            <div class="d-flex flex-column">
                                <label for="S1-{{formatDate this 'YYYY-MM-DD'}}" class="checkbox-item p-2">
                                    <input type="checkbox" name="shifts" id="S1-{{formatDate this 'YYYY-MM-DD'}}"
                                        value="S1-{{formatDate this 'YYYY-MM-DD'}}">
                                    <span class="checkbox-label">Shift 1</span>
                                </label>
                                <label for="S2-{{formatDate this 'YYYY-MM-DD'}}" class="checkbox-item px-2 pb-2">
                                    <input type="checkbox" name="shifts" id="S2-{{formatDate this 'YYYY-MM-DD'}}"
                                        value="S2-{{formatDate this 'YYYY-MM-DD'}}">
                                    <span class="checkbox-label">Shift 2</span>
                                </label>
                            </div>
                            {{/if}}
                            </th>
                            {{/ifEquals}}
                            {{/each}}
                    </tr>
                    {{/each}}
                </form>
            </tbody>
        </table>
        {{else}}
        <div>
            <h3 class="text-danger text-center">Please select a month</h3>
        </div>
        {{/if}}
    </form>
</div>

<script>
    $(document).ready(function () {
        const submitButton = $('#submitBtn');
        const loadingSpinner = $('#loadingSpinner');

        $('#SAC').change(function () {
            let selectedSAC = $(this).find('option:selected').text(); // Get the selected option value
            $('#selected-sac-input').val(selectedSAC); // Set the hidden input value
            console.log(selectedSAC);
        });

        $('#availabilityForm').submit(function (event) {
            console.log('Test');
            // Disable the submit button
            submitButton.prop('disabled', true);
            // Display the loading spinner
            loadingSpinner.show();
        });
    });
</script>