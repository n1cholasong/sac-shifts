<div class="availabilities container">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1 class="m-0">{{title}} (Calendar)</h1>
        <form method="GET" class="row h-100 me-1">
            <div class="col">
                <select id="month" name="month" class="form-select">
                    <option selected disabled>Select Month</option>
                    {{#each month}}
                    <option value="{{@index}}">{{this}}</option>
                    {{/each}}
                </select>
            </div>
            <button type="submit" class="btn btn-primary col">Get Record</button>
        </form>
    </div>
</div>
{{#if selectedMonth includeZero=true}}
<div class="availabilities container-fluid">
    <table class="table table-sm text-center table-bordered">
        <thead>
            <tr class="table-secondary">
                <th>Sun</th>
                <th>Mon</th>
                <th>Tue</th>
                <th>Wed</th>
                <th>Thu</th>
                <th>Fri</th>
                <th>Sat</th>
            </tr>
        </thead>
        <tbody>
            {{#each weeks}}
            <tr class="table-light">
                {{#each this}}
                <th>{{this.day}}</th>
                {{/each}}
            </tr>
            <tr>
                {{#each this}}
                <td class="py-3">
                    {{#if this.s1}}
                    <div class="mb-3">
                        <h6>Shfit 1 ({{this.s1.length}})</h6>
                        <div class="SAC">
                            <ol>
                                {{#each this.s1}}
                                <li>{{this.fields.[Full Name]}}</li>
                                {{/each}}
                            </ol>
                        </div>
                    </div>
                    <div>
                        <h6>Shfit 2 ({{this.s2.length}})</h6>
                        <div class="SAC">
                            <ol>
                                {{#each this.s2}}
                                <li>{{this.fields.[Full Name]}}</li>
                                {{/each}}
                            </ol>
                        </div>
                    </div>
                    {{/if}}
                </td>
                {{/each}}
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
{{else}}
<div>
    <h3 class="text-danger text-center">Please select a month</h3>
</div>
{{/if}}